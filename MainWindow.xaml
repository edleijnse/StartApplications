<Window x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button Grid.Column="0" Grid.Row="0" Content="Start Word" Click="ButtonClickHandler"  Margin="30,44,31,44"/>
        <Button Grid.Column="1" Grid.Row="0" Content="Start Excel" Click="ButtonClickHandler" Margin="30,44,31,44"/>
        <Button Grid.Column="0" Grid.Row="1" Content="Start OneNote" Click="ButtonClickHandler" Margin="30,44,31,44"/>
        <Button Grid.Column="1" Grid.Row="1" Content="Start Outlook" Click="ButtonClickHandler"  Margin="30,44,31,44"/>
    </Grid>
</Window>
